<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    cardview:cardCornerRadius="1dp"
    android:elevation="0dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="15dp"
        android:padding="5dp"
        cardview:cardBackgroundColor="@android:color/darker_gray"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="@color/textMain"
            android:layout_alignParentLeft="true"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/buttonAdd"
            android:layout_margin="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_add_black_18dp"
            android:layout_alignParentRight="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemQuantity"

            android:layout_toLeftOf="@id/buttonAdd"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="32893820"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/buttonRemove"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:layout_toLeftOf="@id/itemQuantity"
            android:background="@drawable/ic_remove_black_18dp" />
        />
        <!--<TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/itemQuantity"

            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:text="32893820"/>-->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#000000"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>